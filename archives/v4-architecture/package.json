{
  "name": "crm-v4",
  "version": "4.0.0",
  "private": true,
  "description": "CRM系统 v4.0 - 基于现代化技术栈的CRM客户关系管理系统",
  "scripts": {
    "install:all": "pnpm install && pnpm --filter server install && pnpm --filter admin-web install && pnpm --filter mini-app install",
    "dev": "concurrently \"pnpm --filter server dev\" \"pnpm --filter admin-web dev\"",
    "dev:server": "pnpm --filter server dev",
    "dev:admin": "pnpm --filter admin-web dev",
    "dev:mini": "pnpm --filter mini-app dev:mp-weixin",
    "build": "pnpm --filter server build && pnpm --filter admin-web build",
    "build:server": "pnpm --filter server build",
    "build:admin": "pnpm --filter admin-web build",
    "build:mini": "pnpm --filter mini-app build:mp-weixin",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop crm-server",
    "pm2:restart": "pm2 restart crm-server",
    "pm2:logs": "pm2 logs"
  },
  "workspaces": [
    "server",
    "admin-web",
    "mini-app"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
