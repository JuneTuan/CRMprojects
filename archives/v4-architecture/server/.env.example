# Application
NODE_ENV=development
PORT=3001

# Database Type: json, sqlite, or postgres
DB_TYPE=json

# JSON Storage
DATA_DIR=./data

# SQLite (when DB_TYPE=sqlite)
DB_PATH=./data/crm.db

# PostgreSQL (when DB_TYPE=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=crm_db

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
